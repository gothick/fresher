{% extends 'base.html.twig' %}

{% block title %}Fresher - Complete Phone Number Verification{% endblock %}

{% block body %}
    {{ include('partials/_alert.html.twig') }}
    <div class="row mt-4">
        <div class="col mx-3 headerstrip">
            <div class="row">
                <div class="col">
                    <h2>Verify phone number for {{ user.username }}</h2>
                    <p>Please enter the code sent to {{ user.anonymisedPhoneNumber }}:</p>
                    {{ form(form) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col mx-3">
            <a href="{{ path('user_index') }}">back to user page</a>
        </div>
    </div>
{% endblock %}
