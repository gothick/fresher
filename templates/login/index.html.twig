{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
{% if error %}
    <div>{{ error.messageKey | trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container">
    <h1>Log In</h1>
    <form action="{{ path('login') }}" method="post">
        <div class="mb-3">
            <label for="username">Email:</label>
            <input class="form-control"  type="text" id="username" name="_username" value="{{ last_username }}"/>
        </div>
        <div class="mb-3">
            <label for="password">Password:</label>
            <input class="form-control" type="password" id="password" name="_password"/>
        </div>
        <div class="mb-3">
            <label class="form-check-label" for="remember_me">Keep me logged in</label>
            <input class="form-check-input" type="checkbox" id="remember_me" name="_remember_me" checked/>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Log in</button>
        </div>
        {# If you want to control the URL the user is redirected to on success #}
        <input type="hidden" name="_target_path" value="/dashboard"/>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    </form>
</div>
{% endblock %}
