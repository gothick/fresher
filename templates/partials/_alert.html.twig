{#
    Read and display all flash messages. Messages should be sent with a
    type matching Bootstrap's alert colours:
    https://getbootstrap.com/docs/5.0/components/alerts/
#}
{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissable fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endfor %}
