{% for goal in theme.goals %}
<div class="row ps-2">
    <div class="col">
        <h3><a href="{{ path('goal_show', { 'theme': theme.id, 'goal': goal.id }) }}">{{ goal.name }}</a></h3>
        {{ goal.description | striptags | markdown }}
        <hr/>
    </div>
</div>
{% else %}
<p>You haven't set any goals for this theme yet.</p>
{% endfor %}
