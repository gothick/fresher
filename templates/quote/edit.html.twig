{% extends 'base.html.twig' %}

{% block title %}Fresher Admin - Edit Motivational Quote{% endblock %}

{% block body %}
<div class="container">
    {{ include('partials/_alert.html.twig') }}
    <h1>Edit Motivational Quote</h1>
    {{ form(form) }}
    <form
        method="POST"
        action="{{ path('admin_quote_delete', { 'quote': quote.id }) }}"
        onsubmit="return confirm('Are you sure you want to delete this quote?');"
        >
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="token" value="{{ csrf_token('quote_delete') }}"/>
        <button type="submit" name="btn_delete" class="btn btn-danger mt-4"><i class="fas fa-trash-alt" aria-hidden="true"></i> Delete Quote</button>
    </form>

</div>
{% endblock %}

