{% extends 'base.html.twig' %}

{% block title %}Fresher - Edit Helper{% endblock %}

{% block body %}
    {{ include('partials/_alert.html.twig')}}
    <h1>Edit Helper</h1>
    {{ form(form) }}
    <form
        method="POST"
        action="{{ path('helper_delete', { 'id': helper.id }) }}"
        onsubmit="return confirm('Are you sure you want to delete this helper?');"
        >
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="token" value="{{ csrf_token('helper_delete') }}"/>
        <button type="submit" name="btn_delete" class="btn btn-danger mt-4"><i class="fas fa-trash-alt" aria-hidden="true"></i> Delete Helper</button>
    </form>
{% endblock %}
